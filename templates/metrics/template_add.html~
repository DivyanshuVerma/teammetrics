<script type="text/javascript">
id_count = 2;
function add()
{   
    fi = document.getElementById('fields');
    divtag = document.createElement('div');
    divtag.setAttribute('id','i'+id_count);
    divtag.innerHTML = '<input type="text" id="ii'+id_count+'">&nbsp;<button onclick="remove(\'i'+id_count+'\')">x</button>';
    fi.appendChild(divtag);   
    id_count++;
}
function remove(id)
{
    fi = document.getElementById(id);
    fi.className += ' hide';
    fi = document.getElementById('i' + id);
    fi.value = '';
}
function commit()
{
    url = 'http://127.0.0.1/add/tn=' + document.getElementById('team').value + ';val=';
    i=1;
    while(i!=id_count)
    {
        txt = document.getElementById('ii' +i).value;
        if(txt=='')
        {
            i++;
            continue;
        }
        url +=  txt + ',';
        i++;
    }
    document.write(url.substring(1));
}
</script>

<div id="main-content">
    <div class="heading">Enter team's' name: &nbsp;&nbsp;<input type="text" id="team"/><br/><br/></div>
    <div class="heading">Enter contributor's name below: <br/><br/></div>
    <div id="fields">
        <div id="i1"><input type="text" id="ii1" />&nbsp;<button onclick="remove('i1');">x</button></div>
    </div>
    <br/><button id="add" onclick="add();">Add more fields</button>
    &nbsp;&nbsp;<button id="commit" onclick="commit();">COMMIT</button>
</div>

